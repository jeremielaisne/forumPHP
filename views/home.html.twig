{% extends 'templates/base.html.twig' %}
{% block header %}
<nav class="navbar navbar-expend-lg navbar-light bg-light">
    <span class="navbar-brand" href="#" />Durarara Forum - デュラララ!!</span>
    <span class="block"></span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="edit"><i class="zmdi zmdi-edit"></i> Edit profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="logout"><i class="zmdi zmdi-lock-outline"></i> Logout</a>
            </li>
        </ul>
    </div>
</nav>
<div class="col-12 bg-secondary">
    <div class="row">
        <div class="d-none d-lg-none d-xl-block col-lg-7">
            <div class="p-1">
                <span class="pl-1 pr-2"> Hi !</span>{{ nickname }} ,<span class="pl-4 pr-4"></span>
                {% if is_working != true %}<span class="pl-4 pr-2"> - Your account is inactive. An administrator will activate your account soon - </span>{% endif %}
            </div>
        </div>
        <div class="d-none d-lg-none d-xl-block col-lg-5">
            <div class="p-1">
                <span>Level {{ level }}</span> | <span>Number messages : {{ nbpost }}</span>
                <a href="tchat"><span class="float-right"><i class="zmdi zmdi-dialpad" style="color:#fff"></i></span></a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block content %}
<div class="container">
    <div class="col-12 mt-5 mb-5 background_grey">
        <div class="row">
            <h1 class="m-5">GROUP FORUM</h1>
            <table id="home_forum" style="width:100%;">
                <tbody class="container-fluid">
                {% for forum in forums %}
                    <tr class="row">
                        <td class="col-12 col-lg-2 m-lg-2">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="96" height="96"><path fill="#8bc34a" d="M28.211,4.419C26.841,4.107,25.472,4,24,4C12.947,4,4,12.947,4,24c0,1.472,0.21,3.051,0.526,4.42C8.63,17.684,16.948,8.63,28.211,4.419z M43.79,21.262c-0.21-1.789-0.736-3.47-1.369-5.049c-17.788,5.683-24.317,20.736-26.106,26.316c1.579,0.629,3.265,1.155,5.053,1.365C23.264,39.053,29.263,27.158,43.79,21.262z M43.79,26.841c-1.896,0.95-4.844,2.841-8.947,6.632c-4.634,4.42-6.842,8.104-7.792,10.317c2.632-0.424,5.16-1.369,7.368-2.738L44,44c0,0-1.896-7.052-2.841-9.79C42.528,32.002,43.367,29.473,43.79,26.841z M39.683,11.578c-1.262-1.579-2.632-2.841-4.313-4.001C29.999,9.156,14,15.369,7.577,35.472c1.16,1.579,2.422,3.055,4.001,4.211C18.42,18.844,34.21,12.947,39.683,11.578z"/></svg>
                        </td>
                        <td class="col-6 col-lg-4 m-lg-2 pt-lg-5">
                            <a href="{{ forum.url }}">
                                <span class="color_white">{{ forum.name }}</span>
                            </a></br>
                            <span class="d-none d-lg-none d-xl-block color_grey">{{ forum.description }}</span></td>
                        <td class="col-5 col-lg-2 m-lg-3 pt-lg-5">
                            <span class="color_grey">{{ forum.nbMessages }} messages</span>
                        </td>
                        <td class="d-none d-lg-none d-xl-block col-3 pt-5">
                        {% for last_message in last_messages %}
                            {% if loop.index == forum.id %}
                                {% if last_message is not null and last_message is not empty %}
                                <div class="row">
                                    <div class="col-2 col-lg-3 d-inline">
                                        <img class="img-responsive" src="./assets/img/avatars/{{ last_message.authorAvatar }}_avatar.jpg" alt="avatar_{{ last_message.authorAvatar }}" style="width:55px;"/>
                                    </div>
                                    <div class="col-7 col-lg-9 d-inline">
                                        <div class="row">
                                            <span class="col-5 col-lg-12"><a href="{{ last_message.topicUrl }}"><span class="color_white">{{ last_message.topicName }}</span></a></span>
                                            <span class="col-7 col-lg-12 color_grey">By <a href="/users/{{ last_message.authorName }}"><span class="color_red">{{ last_message.authorName }}</span></a>, {{ last_message.createdAt }}</span>
                                        </div>
                                    </div>
                                </div>
                                {% else %}
                                <span>No message has been posted</span>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Who is online ?</th>
                    </tr>
                    <tr>
                        {% for user in users %}
                            <td><a href="#"><span class="color_white">{{ user.nickname }}</span></a></td>
                        {% endfor %}
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
{% endblock %}